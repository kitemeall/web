<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>lang</param-name>
        <param-value>ru</param-value>
    </context-param>

    <servlet>
        <servlet-name>card</servlet-name>
        <servlet-class>ui.CardServlet</servlet-class>
        <init-param>
            <param-name>default_tab</param-name>
            <param-value>2</param-value>
        </init-param>
    </servlet>
    
    <servlet>
        <servlet-name>goodsListJsp</servlet-name>
        <jsp-file>/goods_list.jsp</jsp-file>
        
    </servlet>
 
    <servlet-mapping>
        <servlet-name>goodsListJsp</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>card</servlet-name>
        <url-pattern>/card</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
