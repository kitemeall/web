<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
         xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                SecuredBookSite
            </web-resource-name>
            <url-pattern>/order</url-pattern>
            <url-pattern>/profile</url-pattern> 

            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>
                Let only managers use this app
            </description>
            <role-name>tomcat</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>manager</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login</form-login-page>
            <form-error-page>/error</form-error-page>
        </form-login-config>
    </login-config>
    
    <context-param>
        <param-name>default_lang</param-name>
        <param-value>ru</param-value>       
    </context-param>
    
    <context-param>
        <param-name>category_cookie_lifetime</param-name>
        <param-value>15</param-value>
    </context-param>
    
    <context-param>    
        <param-name>lang_cookie_lifetime</param-name>
        <param-value>10</param-value>   
    </context-param> 
    
    <context-param>
            <param-name>default_tab</param-name>
            <param-value>1</param-value>
    </context-param>
    
    <welcome-file-list>
        <welcome-file>list</welcome-file>
    </welcome-file-list>
    
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ui.Login</servlet-class>
    </servlet>
    <servlet-mapping>  
        <servlet-name>login</servlet-name>  
        <url-pattern>/login</url-pattern>  
    </servlet-mapping>
    
    
    
    <servlet>
        <servlet-name>card</servlet-name>
        <servlet-class>ui.CardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>card</servlet-name>
        <url-pattern>/card</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>goodsList</servlet-name>
        <servlet-class>ui.GoodsList</servlet-class>
        
    </servlet>
    <servlet-mapping>
        <servlet-name>goodsList</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Product</servlet-name>
        <servlet-class>ui.Product</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Product</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>product_jsp</servlet-name>
        <jsp-file>/product.jsp</jsp-file>
        <init-param>
            <param-name>default_tab</param-name>
            <param-value>3</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>  
        <servlet-name>product_jsp</servlet-name>  
        <url-pattern>/product.jsp</url-pattern>  
    </servlet-mapping>
    
    
    
    
    
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>ui.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>  
        <servlet-name>profile</servlet-name>  
        <url-pattern>/profile</url-pattern>  
    </servlet-mapping>
    
    
    
    
    
    
    <servlet>
        <servlet-name>newjsp</servlet-name>
        <jsp-file>/newjsp.jsp</jsp-file>
        
    </servlet>
    <servlet-mapping>
        <servlet-name>newjsp</servlet-name>
        <url-pattern>/newjsp</url-pattern>
    </servlet-mapping>
    
    
    
    
    <session-config>
        <session-timeout>
            5
        </session-timeout>           
    </session-config>
</web-app>
